{
  "name": "nagayamaryoga.github.io",
  "version": "0.0.1",
  "description": "NagayamaRyoga's web site.",
  "main": "index.js",
  "scripts": {
    "dev": "nuxt",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:text": "textlint --cache ./posts",
    "lint": "npm run lint:js && npm run lint:text",
    "lintfix:js": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "npm run lintfix:js && npm run lint:text",
    "build:posts": "processmd \"./posts/**/*.md\" --outputDir \"./static/posts\" --summaryOutput \"./static/posts/summary.json\" --preview 140 --previewDelimiter \"ã€‚\"",
    "build:gh-pages": "npm run build:posts && cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
    "deploy:gh-pages": "npm run build:gh-pages && push-dir --dir=dist --branch=master --cleanup",
    "test": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "if [ `git name-rev --name-only HEAD` = develop ]; then npm run deploy:gh-pages; fi"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:NagayamaRyoga/NagayamaRyoga.github.io.git"
  },
  "author": "NagayamaRyoga",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "^2.0.0",
    "cross-env": "^7.0.2",
    "nuxt": "^2.14.7",
    "nuxt-fontawesome": "^0.4.0"
  },
  "devDependencies": {
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "^1.0.1",
    "@textlint-rule/textlint-rule-no-invalid-control-character": "^1.2.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.1.0",
    "husky": "^4.3.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.0",
    "processmd": "^4.5.3",
    "pug": "^3.0.0",
    "pug-plain-loader": "^1.0.0",
    "push-dir": "^0.4.1",
    "sass-loader": "^10.1.0",
    "textlint": "^11.7.6",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-ja-hiragana-fukushi": "^1.2.0",
    "textlint-rule-ja-hiragana-hojodoushi": "^1.0.4",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.0.2",
    "textlint-rule-ja-no-abusage": "^2.0.1",
    "textlint-rule-ja-no-mixed-period": "^2.1.1",
    "textlint-rule-ja-no-redundant-expression": "^3.0.2",
    "textlint-rule-ja-no-successive-word": "^1.2.0",
    "textlint-rule-ja-no-weak-phrase": "^1.0.5",
    "textlint-rule-ja-unnatural-alphabet": "^2.0.1",
    "textlint-rule-max-comma": "^1.0.4",
    "textlint-rule-max-ten": "^2.0.4",
    "textlint-rule-no-double-negative-ja": "^1.0.6",
    "textlint-rule-no-doubled-conjunction": "^1.0.3",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^1.1.1",
    "textlint-rule-no-doubled-joshi": "^3.8.0",
    "textlint-rule-no-dropping-the-ra": "^2.0.0",
    "textlint-rule-no-hankaku-kana": "^1.0.2",
    "textlint-rule-no-mix-dearu-desumasu": "^4.0.1",
    "textlint-rule-no-nfd": "^1.0.2",
    "textlint-rule-preset-jtf-style": "^2.3.6",
    "textlint-rule-prh": "^5.3.0"
  }
}
